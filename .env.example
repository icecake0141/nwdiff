# NW-Diff Environment Configuration
# Copy this file to .env and fill in your values

# Device password for SSH connections to network devices
DEVICE_PASSWORD=your_device_password_here

# API token for securing sensitive endpoints (capture, logs, export)
# Generate a secure token with: python -c "import secrets; print(secrets.token_urlsafe(32))"
NW_DIFF_API_TOKEN=your_secure_api_token_here

# Optional: HTTP Basic Authentication credentials (for browser access)
# Only enforced when NW_DIFF_API_TOKEN is set
# NW_DIFF_BASIC_USER=admin

# Production: Use hashed password (recommended)
# Generate hash with: python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your_password'))"
# NW_DIFF_BASIC_PASSWORD_HASH=your_hashed_password_here

# Development: Plain password (NOT recommended for production)
# NW_DIFF_BASIC_PASSWORD=your_plain_password_here

# Flask debug mode (set to false in production)
APP_DEBUG=false

# Optional: Custom path to hosts.csv inventory file
# If not set, defaults to hosts.csv in the application directory
# HOSTS_CSV=/path/to/hosts.csv
