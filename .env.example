# NW-Diff Environment Configuration
# Copy this file to .env and fill in your values

# Device password for SSH connections to network devices
DEVICE_PASSWORD=your_device_password_here

# API token for securing sensitive endpoints (capture, logs, export)
# Generate a secure token with: python -c "import secrets; print(secrets.token_urlsafe(32))"
NW_DIFF_API_TOKEN=your_secure_api_token_here

# Flask debug mode (set to false in production)
APP_DEBUG=false

# Optional: Custom path to hosts.csv inventory file
# If not set, defaults to hosts.csv in the application directory
# HOSTS_CSV=/path/to/hosts.csv
